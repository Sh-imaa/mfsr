{
  "paths": {
    "prefix": "$SLURM_TMPDIR/probav_data/",
    "checkpoint_dir": "$SCRATCH/mfsr/models"
  },

  "misc": {
    "tag": "clearance_run",
    "cluster": true
  }
  ,

  "network": {
    "encoder": {
      "dropout": 0,
      "in_channels": 2,
      "num_layers" : 2,
      "kernel_size": 3,
      "channel_size": 64
    },
    "recursive": {
      "dropout": 0,
      "alpha_residual": "padding",
      "in_channels": 64,
      "num_layers" : 2,
      "kernel_size": 3
    },
    "decoder": {
      "dropout": 0,
      "deconv": {
        "in_channels": 64,
        "kernel_size": 3,
        "stride": 3,
        "out_channels": 64
      },
      "final": {
        "in_channels": 64,
        "kernel_size": 1,
        "out_channels": 1
      }
    }
  },
    
  "training": {
    "num_epochs": 400,
    "batch_size": 16,
    "data_limit": -1,

    "min_L": 32,
    "n_views": 32,
    "n_workers": 4,
    "crop": 3,
    "weighted_order": false,
    "weighted_pixels": true,


    "lr": 0.0003,
    "lr_step": 2,
    "lr_decay": 0.97,

    "load_lr_maps": false,
    "beta": 50.0,
    "lr_weights": "smooth_routing",
    "sorted_k": false,
    "outlier": "keep",

    "weight_maps_type": "routing",

    "create_patches": true,
    "patch_size": 64,
    "val_proportion": 0.10,
    "lambda": 0.000001
  }

}
