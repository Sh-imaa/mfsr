{
  "paths": {
    "prefix": "data/probav_data/",
    "checkpoint_dir": "models"
  },

  "misc": {
    "tag": "random_run",
    "cluster": true
  }

  ,
  "network": {
    "encoder": {
      "dropout": 0.5,
      "in_channels": 3,
      "num_layers" : 2,
      "kernel_size": 3,
      "channel_size": 64
    },
    "recursive": {
      "dropout": 0.5,
      "attention": false,
      "alpha_residual": "padding",
      "in_channels": 64,
      "num_layers" : 2,
      "kernel_size": 3
    },
    "decoder": {
      "dropout": 0.5,
      "deconv": {
        "in_channels": 64,
        "kernel_size": 3,
        "stride": 3,
        "out_channels": 64
      },
      "final": {
        "in_channels": 64,
        "kernel_size": 1,
        "out_channels": 1
      }
    }
  },
    
  "training": {
    "num_epochs": 1,
    "batch_size": 2,
    "data_limit": 4,

    "min_L": 4,
    "n_views": 4,
    "n_workers": 4,
    "crop": 3,

    "weighted_order": "pixels_weights",
    "extra_channel": false,
    "anchor": "median",

    "lr": 0.0007,
    "lr_step": 2,
    "lr_decay": 0.97,

    "load_lr_maps": false,
    "beta": 50.0,
    "lr_weights": "smooth_routing",
    "sorted_k": false,
    "outlier": "replace",

    "weight_maps_type": "routing",

    "create_patches": true,
    "patch_size": 64,
    "val_proportion": 0.10,
    "lambda": 0.000001
  }

}
